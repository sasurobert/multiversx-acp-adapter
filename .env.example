# ===========================================
# MultiversX ACP Adapter Configuration
# ===========================================

# Network Configuration
API_URL=https://devnet-api.multiversx.com
CHAIN_ID=D
NODE_ENV=dev

# Contract Addresses
MARKETPLACE_ADDRESS=erd1...
VENDOR_ADDRESS=erd1...
ESCROW_ADDRESS=erd1...

# Multi-shard relayer keys (for RelayedV3 transactions)
# Each shard requires a separate relayer address for gasless transactions
RELAYER_SECRET_KEY_SHARD_0=add_relayer_secret_key_for_shard_0
RELAYER_SECRET_KEY_SHARD_1=add_relayer_secret_key_for_shard_1
RELAYER_SECRET_KEY_SHARD_2=add_relayer_secret_key_for_shard_2

# Vendor Keys
VENDOR_SECRET_KEY=add_vendor_secret_key_here

# Transaction Settings
GAS_LIMIT=60000000

# Product Catalog Configuration
SHOWCASE_COLLECTION=
DEFAULT_TOKEN_ID=

# OpenAI ACP Webhooks
OPENAI_WEBHOOK_URL=
OPENAI_WEBHOOK_SECRET=

# ACP Authentication (optional - for secured endpoints)
ACP_API_KEY=
ACP_SIGNING_SECRET=

# Store Configuration (used in product feed and checkout)
SELLER_NAME=MultiversX Store
SELLER_URL=https://multiversx.com
RETURN_POLICY_URL=https://multiversx.com/terms
STORE_COUNTRY=US

# Order & Wallet URLs
ORDER_PERMALINK_BASE_URL=https://multiversx.com/orders
WALLET_URL=https://wallet.multiversx.com
